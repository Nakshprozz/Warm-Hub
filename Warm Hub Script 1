local Players = game:GetService("Players")
local TweenService = game:GetService("TweenService")
local player = Players.LocalPlayer

-- Create ScreenGui
local screenGui = Instance.new("ScreenGui")
screenGui.Name = "WarmDiscordGui"
screenGui.ResetOnSpawn = false
screenGui.Parent = player:WaitForChild("PlayerGui")

-- Main Frame (starts small for animation)
local mainFrame = Instance.new("Frame")
mainFrame.Size = UDim2.new(0, 0, 0, 0)
mainFrame.Position = UDim2.new(0.5, 0, 0.5, 0)
mainFrame.AnchorPoint = Vector2.new(0.5, 0.5)
mainFrame.BackgroundColor3 = Color3.new(0, 0, 0)
mainFrame.Active = true
mainFrame.Draggable = true
mainFrame.Parent = screenGui

-- Rounded Corners
local frameCorner = Instance.new("UICorner")
frameCorner.CornerRadius = UDim.new(0, 12)
frameCorner.Parent = mainFrame

-- UI Glow
local uiStroke = Instance.new("UIStroke")
uiStroke.Parent = mainFrame
uiStroke.Thickness = 3
uiStroke.Transparency = 0.3
uiStroke.Color = Color3.fromRGB(255, 153, 102)
uiStroke.ApplyStrokeMode = Enum.ApplyStrokeMode.Border

-- Animate the frame open
TweenService:Create(mainFrame, TweenInfo.new(0.4, Enum.EasingStyle.Back, Enum.EasingDirection.Out), {
    Size = UDim2.new(0, 400, 0, 250),
}):Play()

-- Instruction Label
local instructionLabel = Instance.new("TextLabel")
instructionLabel.Parent = mainFrame
instructionLabel.Size = UDim2.new(1, -20, 0, 40)
instructionLabel.Position = UDim2.new(0, 10, 0, 10)
instructionLabel.BackgroundTransparency = 1
instructionLabel.Text = "Copy the Discord link and paste it in your browser for scripts and executor."
instructionLabel.TextColor3 = Color3.new(1, 1, 1)
instructionLabel.TextScaled = true
instructionLabel.Font = Enum.Font.SourceSansBold

-- Title: Warm ðŸ”¥
local titleLabel = Instance.new("TextLabel")
titleLabel.Parent = mainFrame
titleLabel.Size = UDim2.new(1, -20, 0, 50)
titleLabel.Position = UDim2.new(0, 10, 0.25, 0)
titleLabel.BackgroundTransparency = 1
titleLabel.Text = "Warm ðŸ”¥"
titleLabel.TextColor3 = Color3.fromRGB(255, 170, 85)
titleLabel.TextScaled = true
titleLabel.Font = Enum.Font.GothamBold

-- Copy Button
local copyButton = Instance.new("TextButton")
copyButton.Parent = mainFrame
copyButton.Size = UDim2.new(0.6, 0, 0, 50)
copyButton.Position = UDim2.new(0.2, 0, 0.7, 0)
copyButton.BackgroundColor3 = Color3.fromRGB(135, 206, 235)
copyButton.Text = "Copy Discord Link"
copyButton.TextColor3 = Color3.new(0, 0, 0)
copyButton.TextScaled = true
copyButton.Font = Enum.Font.GothamBold
copyButton.BorderSizePixel = 0

-- Rounded Corners for Button
local buttonCorner = Instance.new("UICorner")
buttonCorner.CornerRadius = UDim.new(0, 10)
buttonCorner.Parent = copyButton

-- Button Glow
local buttonGlow = Instance.new("UIStroke")
buttonGlow.Parent = copyButton
buttonGlow.Thickness = 2
buttonGlow.Color = Color3.fromRGB(255, 204, 128)
buttonGlow.Transparency = 0.3
buttonGlow.ApplyStrokeMode = Enum.ApplyStrokeMode.Border

-- Discord Link
local discordLink = "https://dsc.gg/getwarm"

copyButton.MouseButton1Click:Connect(function()
    setclipboard(discordLink)
    copyButton.Text = "Copied!"
    wait(1.5)
    copyButton.Text = "Copy Discord Link"
end)

-- Hover Effects
copyButton.MouseEnter:Connect(function()
    copyButton.BackgroundColor3 = Color3.fromRGB(150, 220, 255)
end)

copyButton.MouseLeave:Connect(function()
    copyButton.BackgroundColor3 = Color3.fromRGB(135, 206, 235)
end)
